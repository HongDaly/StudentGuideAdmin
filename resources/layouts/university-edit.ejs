<%+ extend('layout') %>
    <%+ section('content')%>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header" data-background-color="#005A77">
                    <h4 class="title">Edit University</h4>
                    <p class="category">___________________</p>
                </div>
                <div class="card-content">
                    <form action="/university-edit/<%= university.data().logo %>" method="POST" enctype="multipart/form-data" autocomplete="off">
                        <div class="col-md-12">
                            <h4 class="title">Logo</h4>
                            <div class="card-content" style="margin-top: -30px">
                                <div class="col-md-2">
                                    <li class="form-group" style="list-style-type: none">
                                        <img src="<%= university.data().logo %>" style="width: 100px;height: 100px;border-radius: 5px;box-shadow: 2px 3px #005A77" id="pre_logo"
                                            name="pre_logo">
                                    </li>
                                </div>
                            </div>
                        </div>
                        <div>
                            <h4 class="title">University</h4>
                            <div class="row card-content" style="margin-top: -30px">
                                <div class="col-md-4">
                                    <div class="form-group label-floating is-empty is-focused">
                                        <label class="control-label">English Name</label>
                                        <input type="text" name="name_en" class="form-control" value="<%= university.data().name_en %>">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group label-floating is-empty is-focused">
                                        <label class="control-label">Khmer Name</label>
                                        <input type="text" name="name_kh" class="form-control" value="<%= university.data().name_kh %>">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                        <div class="form-group label-floating is-empty is-focused">
                                            <label class="control-label">Abbreviation Name</label>
                                            <input type="text" name="name_abbr" class="form-control" value="<%= university.data().name_abbr %>">
                                            <span class="material-input"></span>
                                        </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <h4 class="title">Contact</h4>
                            <div class="row card-content" style="margin-top: -30px">
                                <div class="col-md-4">
                                    <div class="form-group label-floating is-empty is-focused">
                                        <label class="control-label">Email</label>
                                        <input type="email" name="email" class="form-control" value="<%= university.data().contact.email %>">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group label-floating is-empty is-focused">
                                        <label class="control-label">Website</label>
                                        <input type="text" name="website" class="form-control" value="<%= university.data().contact.website %>">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group label-floating is-empty is-focused">
                                        <label class="control-label">Facebook Page</label>
                                        <input type="text" name="fb_page" class="form-control" value="<%= university.data().contact.fb_page %>">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row card-content" style="margin-top: -50px">
                                <div class="col-md-4">
                                    <div class="form-group label-floating is-empty is-focused">
                                        <label class="control-label">Phone</label>
                                        <input type="text" name="phone" class="form-control" value="<%= university.data().contact.phone %>">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group label-floating is-empty is-focused">
                                        <label class="control-label">Address</label>
                                        <input type="text" name="address" class="form-control"  value="<%= university.data().contact.address %>">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                                <h4 class="title">Geography</h4>
                                <div class="row card-content" style="margin-top: -30px">
                                    <div class="col-md-4">
                                        <div class="form-group label-static">
                                            <label class="control-label">City</label>
                                            <select class="form-control" name="city">
                                                <% cities.forEach((city)=>{ %>
                                                    <option value="<%= city.name_en %>" 
                                                        <% if(university.data().geography.city == city.name_en) { %>
                                                            selected
                                                        <% } %>
                                                    ><%= city.name_en %></option>
                                                <% }) %>
                                            </select>
                                            <span class="material-input"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group label-floating is-empty is-focused">
                                            <label class="control-label">Location Lat</label>
                                            <input type="text" name="location_lat" class="form-control" value="<%= university.data().geography.location.lat %>">
                                            <span class="material-input"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group label-floating is-empty is-focused">
                                            <label class="control-label">Location Long</label>
                                            <input type="text" name="location_long" class="form-control" value="<%= university.data().geography.location.long %>">
                                            <span class="material-input"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-2">
                                        <div class="form-group label-static">
                                            <label class="control-label">Library</label>
                                            <select class="form-control" name="library">
                                                <option value="Yes"  
                                                    <% if(university.data().geography.library == 'Yes') { %>
                                                        selected
                                                    <% } %>
                                                    >Yes</option>
                                                <option value="No" 
                                                    <% if(university.data().geography.library == 'No') { %>
                                                        selected
                                                    <% } %>
                                                >No</option>
                                            </select>
                                            <span class="material-input"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group label-static">
                                            <label class="control-label">Sport Facility</label>
                                            <select class="form-control" name="sport_facility">
                                                <option value="Yes"  
                                                    <% if(university.data().geography.sport_facility == 'Yes') { %>
                                                        selected
                                                    <% } %>
                                                    >Yes</option>
                                                <option value="No" 
                                                    <% if(university.data().geography.sport_facility == 'No') { %>
                                                        selected
                                                    <% } %>
                                                >No</option>
                                            </select>
                                            <span class="material-input"></span>
                                        </div>
                                    </div>
                                </div>
                        </div>
                        <button type="submit" class="btn btn-primary pull-right">UPDATE UNIVERSITY</button>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
        <%+ endSection %>